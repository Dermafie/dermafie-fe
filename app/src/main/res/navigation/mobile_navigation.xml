<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_scan">

    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.example.dermafie.ui.scan.ScanFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_scan" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.dermafie.ui.history.HistoryFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.dermafie.ui.profile.ProfileFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_profile" />
</navigation>